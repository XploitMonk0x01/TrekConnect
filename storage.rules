rules_version = '2';

// Docs: https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow anyone to read images (for public photos, profile pics etc)
    match /images/{allPaths=**} {
        allow read: if true;
    }

    // Allow authenticated users to write to the 'images' folder
    // and validate that the uploaded file is an image and under 5MB.
    match /images/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
